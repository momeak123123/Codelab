<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/advocate"
    tools:context=".seven_mini">

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d16"
        android:text="小程序"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="@dimen/s16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fold5"
        android:layout_width="@dimen/d35"
        android:layout_height="@dimen/d35"
        android:layout_marginStart="@dimen/d4"
        android:layout_marginTop="@dimen/d8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/returns" />


    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/d8"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fold5"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/ima_one_im"
            android:layout_width="@dimen/d45"
            android:layout_height="@dimen/d45"
            android:layout_marginStart="@dimen/d45"
            android:layout_marginTop="@dimen/d30"
            android:elevation="@dimen/d3"
            android:translationZ="@dimen/d3"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/dispose" />

        <TextView
            android:id="@+id/ima_one_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d53"
            android:layout_marginTop="@dimen/d85"
            android:elevation="@dimen/d3"
            android:text="处理"
            android:textSize="@dimen/s14"
            android:translationZ="@dimen/d3"
            app:layout_column="0"
            app:layout_row="0" />


        <ImageView
            android:id="@+id/ima_two_im"
            android:layout_width="@dimen/d45"
            android:layout_height="@dimen/d45"
            android:layout_marginStart="@dimen/d45"
            android:layout_marginTop="@dimen/d30"
            android:elevation="@dimen/d3"
            android:translationZ="@dimen/d3"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/detection" />

        <TextView
            android:id="@+id/ima_two_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d53"
            android:layout_marginTop="@dimen/d85"
            android:elevation="@dimen/d3"
            android:text="检测"
            android:textSize="@dimen/s14"
            android:translationZ="@dimen/d3"
            app:layout_column="1"
            app:layout_row="0" />


        <ImageView
            android:id="@+id/ima_there_im"
            android:layout_width="@dimen/d45"
            android:layout_height="@dimen/d45"
            android:layout_marginStart="@dimen/d45"
            android:layout_marginTop="@dimen/d30"
            android:elevation="@dimen/d3"
            android:translationZ="@dimen/d3"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/recognition" />

        <TextView
            android:id="@+id/ima_there_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d53"
            android:layout_marginTop="@dimen/d85"
            android:elevation="@dimen/d3"
            android:text="算法"
            android:textSize="@dimen/s14"
            android:translationZ="@dimen/d3"
            app:layout_column="2"
            app:layout_row="0" />


        <ImageView
            android:id="@+id/ima_four_im"
            android:layout_width="@dimen/d45"
            android:layout_height="@dimen/d45"
            android:layout_marginStart="@dimen/d45"
            android:layout_marginTop="@dimen/d30"
            android:elevation="@dimen/d3"
            android:translationZ="@dimen/d3"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/data" />

        <TextView
            android:id="@+id/ima_four_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d53"
            android:layout_marginTop="@dimen/d85"
            android:elevation="@dimen/d3"
            android:text="数据"
            android:textSize="@dimen/s14"
            android:translationZ="@dimen/d3"
            app:layout_column="3"
            app:layout_row="0" />
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>